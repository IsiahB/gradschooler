@{
    ViewBag.Title = "Program";
    var progs = ViewBag.programs;

    //better way??????????????? help
    foreach (var thing in progs)
    {
        thing.acceptancerate = (int)(thing.acceptancerate * 100);
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GradSchooler</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Program Name</th>
            <th>Degree</th>
            <th>Acceptance Rate</th>
            <th>In state Tuition</th>
            <th>Out of State Tuition</th>
            <th>Application Fee</th>
            <th>Application Deadline</th>
            <th>University Name</th>
        </tr>
        @foreach (var item in progs)
        {
            <tr>
                <td>@item.programname</td>
                <td>@item.degree</td>
                <td>@item.acceptancerate%</td>
                <td>$@item.instatetuition</td>
                <td>$@item.outstatetuition</td>
                <td>$@item.fee</td>
                <td>@item.deadline</td>
                <td>@item.schoolname</td>
            </tr>
        }
    </table>
</body>
</html>
