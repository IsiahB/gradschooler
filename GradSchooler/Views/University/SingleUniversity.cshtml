@using GradSchooler.Models
@model GradSchooler.Models.University
@{ 
    ViewBag.Title = "University";
    University item = (University)ViewData["uni"];

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>University Information</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        input[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }

        input[type=submit] {
            background-color: #4CAF50;
            color: white;
            padding: 4px 8px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type=submit]:hover {
                background-color: #45a049;
            }

        .container {
            border-radius: 5px;

            padding: 20px;
        }
    </style>
</head>
<body>
    <h3>University Information</h3>

    <!-- diaplay university information -->
    @using (Html.BeginForm("SingleUniversity", "University", FormMethod.Post))
    {
        <table>
            <tr>
                <th>University</th>
                <th><input type="checkbox" name="funding" value="@item.fundingtype" /></th>
                <th>Funding</th>
                <th><input type="checkbox" name="city" value="@item.city" /></th>
                <th>City</th>
                <th><input type="checkbox" name="state" value="@item.state" /></th>
                <th>State</th>
                <th><input type="checkbox" name="environment" value="@item.environment" /></th>
                <th>Environment</th>
            </tr>
            <tr>
                 <td>@item.name</td>
                 <td></td>
                 <td>@item.fundingtype</td>
                 <td></td>
                 <td>@item.city</td>
                 <td></td>
                 <td>@item.state</td>
                 <td></td>
                 <td>@item.environment</td>
            </tr>
        </table>
        <input type="submit" value="Request to Update">
    }

    @if (Request.IsAuthenticated) {
        <!-- Form to submit new university info -->
        using (Html.BeginForm("SingleUniversity", "University", item, FormMethod.Post))
        {   
            
            <div class="container">
                <label for="fundingtype">Funding Type</label><br>
                @Html.TextBoxFor(u => u.fundingtype, new { @class = "form-control", tabindex = 1 })        
                <br>

                <label for="city">City</label><br>
                @Html.TextBoxFor(u => u.city, new { @class = "form-control", tabindex = 2 })        
                <br>
            
                <label for="state">State</label><br>
                @Html.TextBoxFor(u => u.state, new { @class = "form-control", tabindex = 3 })        
                <br>

                <label for="environment">Environment</label><br>
                @Html.TextBoxFor(u => u.environment, new { @class = "form-control", tabindex = 4 })        
            

                <br>
                <input type="submit" value="Submit">
            </div>
        }
    }

</body>
</html>
